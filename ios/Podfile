platform :ios, '15.6'
use_frameworks!          # required for Swift plugins

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # Use modular headers so pods expose module maps (helps Firebase imports)
  use_modular_headers!

  # FIX: Enable modular headers for Firebase
  pod 'Firebase/Core', :modular_headers => true
  pod 'Firebase/Auth', :modular_headers => true
  pod 'Firebase/Storage', :modular_headers => true

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Ensure permission_handler is properly configured
    if target.name == 'permission_handler'
      target.build_configurations.each do |config|
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
          '$(inherited)',
          'PERMISSION_CAMERA=1',
          'PERMISSION_MICROPHONE=1',
        ]
      end
    end

    target.build_configurations.each do |config|
      # Set minimum iOS deployment target to 13.0 for camera plugin compatibility
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      # Allow non-modular includes inside framework modules for certain Firebase headers
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      # Ensure pods define modules so headers can be imported modularly
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end
  # Also apply the same build-setting to the user project's targets (e.g. Runner)
  installer.aggregate_targets.each do |aggregate|
    if aggregate.user_project && aggregate.user_project.path
      aggregate.user_project.targets.each do |user_target|
        user_target.build_configurations.each do |config|
          config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
          config.build_settings['DEFINES_MODULE'] = 'YES'
        end
      end
    end
  end
  
end

