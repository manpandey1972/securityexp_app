{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Functions: Install Dependencies",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Functions: Build",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "build",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Functions: Build Watch",
      "type": "shell",
      "command": "npm run build:watch",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Functions: Deploy All",
      "type": "shell",
      "command": "npm run deploy",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "build",
      "dependsOn": "Functions: Build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Functions: Serve (Emulator)",
      "type": "shell",
      "command": "npm run serve",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "test",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Functions: View Logs",
      "type": "shell",
      "command": "npm run logs",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Functions: Lint",
      "type": "shell",
      "command": "npm run lint",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "build",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Functions: Test",
      "type": "shell",
      "command": "npm run test",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Functions: Test Watch",
      "type": "shell",
      "command": "npm run test:watch",
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "group": "test",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Emulators: Start All",
      "type": "shell",
      "command": "firebase emulators:start",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Flutter: Run iOS",
      "type": "shell",
      "command": "flutter run -d ios",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Flutter: Run Android",
      "type": "shell",
      "command": "flutter run -d android",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
